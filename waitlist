    <script>
        // Store form submissions in memory (since localStorage isn't available)
        let submissions = [];

        document.getElementById('waitlistForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const submission = {
                name: formData.get('name'),
                email: formData.get('email'),
                trade: formData.get('trade'),
                phone: formData.get('phone') || '',
                timestamp: new Date().toISOString()
            };
            
            // Add to submissions array
            submissions.push(submission);
            
            // Show success message
            document.getElementById('successMessage').style.display = 'block';
            document.getElementById('errorMessage').style.display = 'none';
            
            // Reset form
            this.reset();
            
            // Log submission (you can see this in browser console)
            console.log('New submission:', submission);
            console.log('All submissions:', submissions);
            
            // Hide success message after 5 seconds
            setTimeout(() => {
                document.getElementById('successMessage').style.display = 'none';
            }, 5000);
        });

        // Simple analytics tracking
        let pageViews = 1;
        let formViews = 0;
        let submissions_count = 0;

        // Track form view when user scrolls to form
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && formViews === 0) {
                    formViews = 1;
                    console.log('Form viewed');
                }
            });
        });

        observer.observe(document.getElementById('waitlistForm'));
    </script>
